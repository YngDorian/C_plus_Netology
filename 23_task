#include <iostream>

int main() {
    int size;

    // Запрашиваем у пользователя размер массива
    std::cout << "Введите размер массива: ";
    std::cin >> size;

    // Проверка на корректность размера
    if (size <= 0) {
        std::cout << "Размер массива должен быть положительным числом!" << std::endl;
        return 1; // Завершаем программу с кодом ошибки
    }

    // Создаем массив заданного размера
    int* array = new int[size]; // Используем динамическое выделение памяти

    // Запрашиваем ввод элементов массива
    for (int i = 0; i < size; ++i) {
        std::cout << "Введите элемент " << (i + 1) << ": ";
        std::cin >> array[i];
    }

    // Выводим получившийся массив
    std::cout << "Получившийся массив: ";
    for (int i = 0; i < size; ++i) {
        std::cout << array[i] << " ";
    }
    std::cout << std::endl;

    // Освобождаем выделенную память
    delete[] array;

    return 0;
}
