#include <iostream>

// Функция для обмена значениями с использованием указателей
void swap(int *a, int *b) {
    int temp = *a; // Сохраняем значение a во временной переменной
    *a = *b;       // Присваиваем значение b переменной a
    *b = temp;     // Присваиваем сохраненное значение a переменной b
}

int main() {
    int x = 5, y = 8;

    std::cout << "Перед обменом: x = " << x << ", y = " << y << std::endl;

    // Вызываем функцию swap и передаем адреса переменных
    swap(&x, &y); // Передаем адреса переменных x и y

    std::cout << "После обмена: x = " << x << ", y = " << y << std::endl;

    return 0;
}
