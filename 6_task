#include <iostream>
int main() {
    int number;
    int sum = 0; // Инициализируем сумму

    std::cout << "Введите целые числа (введите 0 для завершения ввода):" << std::endl;

    // Цикл для ввода чисел
    while (true) {
        std::cin >> number; // Ввод числа

        if (number == 0) { // Проверка, если введено 0
            break; // Выход из цикла
        }

        sum += number; // Добавляем введенное число к сумме
    }

    // Вывод суммы
    std::cout << "Сумма введённых чисел: " << sum << std::endl;

    return 0;
}
