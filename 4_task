int a, b, c;
 
   // Запрос у пользователя трех целых чисел
   std::cout << "Введите три целых числа:\n";
   std::cin >> a >> b >> c;

    // Создаем массив для хранения чисел
    int numbers[3] = {a, b, c}
    // Сортируем массив в порядке убывания
    std::sort(numbers, numbers + 3, std::greater<int>())
    // Выводим числа в порядке убывания
    std::cout << "Числа в порядке убывания: ";
    for (int i = 0; i < 3; ++i) {
        std::cout << numbers[i] << " ";
    }
    std::cout << std::endl;
   return 0;
