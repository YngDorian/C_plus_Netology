#include <iostream>

// Рекурсивная функция для вычисления n-го числа Фибоначчи
int fibonacci(int n) {
    if (n == 0) {
        return 0; // Первое число Фибоначчи
    } else if (n == 1) {
        return 1; // Второе число Фибоначчи
    } else {
        return fibonacci(n - 1) + fibonacci(n - 2); // Сумма двух предыдущих чисел
    }
}

int main() {
    int count;

    // Запрашиваем у пользователя количество чисел Фибоначчи для вывода
    std::cout << "Введите количество чисел последовательности Фибоначчи для вывода: ";
    std::cin >> count;

    // Проверка на корректность ввода
    if (count < 0) {
        std::cout << "Пожалуйста, введите неотрицательное число." << std::endl;
        return 1;
    }

    // Вывод последовательности Фибоначчи
    for (int i = 0; i < count; i++) {
        std::cout << fibonacci(i); // Вычисляем и выводим i-е число Фибоначчи
        if (i < count - 1) {
            std::cout << ", "; // Добавляем запятую для разделения чисел
        }
    }
    std::cout << std::endl; // Переход на новую строку

    return 0;
}
