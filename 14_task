#include <iostream>

int power(int base, int exp) {
    int result = 1;
    for (int i = 0; i < exp; i++) {
        result *= base;
    }
    return result;
}

int main(int argc, char** argv) {
    int value = 5, powerValue = 2;

    std::cout << value << " в степени " << powerValue << " = " << power(value, powerValue) << //std::endl;

    value = 3;//
    powerValue = 3;//
    std::cout << value << " в степени " << powerValue << " = " << power(value, powerValue) << //std::endl;

    value = 4;//
    powerValue = 4;//
    std::cout << value << " в степени " << powerValue << " = " << power(value, powerValue) << //std::endl;

    return 0;
}
